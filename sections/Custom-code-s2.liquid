<!-- sections/custom-heading-text.liquid -->

<div class="custom-text-section" style="padding: {{ section.settings.padding }};">
  <h2 class="custom-heading">{{ section.settings.heading }}</h2>
  <p class="custom-paragraph">{{ section.settings.paragraph }}</p>
</div>

{% schema %}
{
  "name": "Custom Heading & Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FOR THOSE WHO STAND OUT"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Each fragrance is carefully formulated with the highest quality ingredients, ushering in a new era of perfumes for those who appreciate the finest in life."
    },
    {
      "type": "text",
      "id": "padding",
      "label": "Padding (e.g., 20px 10px)",
      "default": "40px 20px"
    }
  ],
  "presets": [
    {
      "name": "Custom Heading & Text",
      "category": "Text"
    }
  ]
}
{% endschema %}

<style>
  .custom-text-section {
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .custom-heading {
    font-weight: bold;
    font-size: 32px;
    margin-bottom: 10px;
  }

  .custom-paragraph {
    font-size: 18px;
    color: #666;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .custom-heading {
      font-size: 24px;
    }

    .custom-paragraph {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .custom-heading {
      font-size: 20px;
    }

    .custom-paragraph {
      font-size: 14px;
    }

    .custom-text-section {
      padding-block: 3rem !important;
    }
  }
</style>
