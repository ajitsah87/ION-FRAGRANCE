<div class="fragrance-boxes">
  <!-- Men's Fragrance Box -->
  <div class="fragrance-box p-6 rounded">
    <a href="{{ section.settings.mens_collection_url }}">
      <div class="image-container">
        <img
          src="{{ section.settings.mens_closed_image | img_url: '1000x' }}"
          alt="Men's Fragrance - Closed"
          class="closed-box-image"
        >
        <img
          src="{{ section.settings.mens_open_image | img_url: '1000x' }}"
          alt="Men's Fragrance - Open"
          class="open-box-image"
        >
      </div>
      <div class="fragrance-details">
        <h2>Men’s Fragrance Set</h2>
        <p>4x 25ml Exclusive Perfumes</p>
        <button class="discover-button">DISCOVER</button>
      </div>
    </a>
  </div>

  <!-- Women's Fragrance Box -->
  <div class="fragrance-box p-6 rounded">
    <a href="{{ section.settings.womens_collection_url }}">
      <div class="image-container women">
        <img
          src="{{ section.settings.womens_closed_image | img_url: '1000x' }}"
          alt="Women's Fragrance - Closed"
          class="closed-box-image"
        >
        <img
          src="{{ section.settings.womens_open_image | img_url: '1000x' }}"
          alt="Women's Fragrance - Open"
          class="open-box-image"
        >
      </div>
      <div class="fragrance-details">
        <h2>Women’s Fragrance Set</h2>
        <p>4x 25ml Exclusive Perfumes</p>
        <button class="discover-button">DISCOVER</button>
      </div>
    </a>
  </div>
</div>

<style>
  .fragrance-boxes {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 0 3rem 3rem;
  }

  .fragrance-box {
    text-align: center;
    flex: 1 1 calc(50% - 20px);
    max-width: calc(50% - 20px);
    aspect-ratio: 16/9;
    background-color: #e9e9e9;
  }

  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 300px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-container img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .closed-box-image {
    transform: scale(1.1);
  }

  .open-box-image {
    opacity: 0;
  }

  .image-container:hover .closed-box-image {
    opacity: 0;
  }

  .image-container:hover .open-box-image {
    opacity: 1;
    transform: scale(1.1);
  }

  .fragrance-details h2 {
    font-size: 1.8rem;
    /* margin-top: 10px  ; */
  }

  .fragrance-details p {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 5px ;
  }

  .discover-button {
    background-color: black;
    color: white;
    padding: 12px 24px;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .fragrance-boxes {
      padding: 0 1rem 2rem;
    }

    .fragrance-box {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .fragrance-details h2 {
      font-size: 1.4rem;
    }

    .fragrance-details p {
      font-size: 1rem;
    }

    .discover-button {
      font-size: 0.9rem;
      padding: 10px 20px;
    }
  }

  @media (max-width: 480px) {
    .fragrance-boxes {
      padding: 0 0.5rem 1.5rem;
    }

    .image-container {
      min-height: 200px;
    }

    .fragrance-details h2 {
      font-size: 1.2rem;
    }

    .fragrance-details p {
      font-size: 0.9rem;
    }

    .discover-button {
      font-size: 0.8rem;
      padding: 8px 16px;
    }
  }
</style>

{% schema %}
{
  "name": "Fragrance Boxes",
  "settings": [
    {
      "type": "image_picker",
      "id": "mens_closed_image",
      "label": "Men's Fragrance - Closed Image"
    },
    {
      "type": "image_picker",
      "id": "mens_open_image",
      "label": "Men's Fragrance - Open Image"
    },
    {
      "type": "image_picker",
      "id": "womens_closed_image",
      "label": "Women's Fragrance - Closed Image"
    },
    {
      "type": "image_picker",
      "id": "womens_open_image",
      "label": "Women's Fragrance - Open Image"
    },
    {
      "type": "url",
      "id": "mens_collection_url",
      "label": "Men's Collection URL"
    },
    {
      "type": "url",
      "id": "womens_collection_url",
      "label": "Women's Collection URL"
    }
  ],
  "presets": [
    {
      "name": "Discover",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
