{% schema %}
{
  "name": "Custom Heading Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FRAGRANCE FOR THE FEARLESS"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Each fragrance is carefully formulated with the highest quality ingredients, ushering in a new era of perfumes for those who appreciate the finest in life."
    }
  ],
  "presets": [
    {
          "name": "Hero Text Section",
      "category": "Text"
    }
  ]
}
{% endschema %}

<div class="custom-heading-section">
  <h1 class="main-heading">{{ section.settings.heading }}</h1>
  <p class="subheading">{{ section.settings.subheading }}</p>
</div>

<style>
  .custom-heading-section {
    text-align: center;
    padding: 80px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-heading {
    font-size: clamp(16px, 5vw, 32px);
    line-height: 1.2;
    margin-bottom: 20px;
    width: 100%;
    font-weight:bold;
  }

  .subheading {
    font-size: clamp(14px, 3vw, 18px);
    line-height: 1.5;
    max-width: 800px;
    margin: 0 auto;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color:#666
  }

  /* Ensure minimum font sizes on very small screens */
  @media screen and (max-width: 480px) {
    .main-heading {
      font-size: 18px;
    }

    .subheading {
      font-size: 14px;
    }
  }
</style>
