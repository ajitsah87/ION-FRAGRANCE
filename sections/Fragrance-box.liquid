{% schema %}
{
  "name": "Fragrance Boxes",
  "settings": [
    {
      "type": "image_picker",
      "id": "mens_closed_image",
      "label": "Men's Fragrance - Closed Image"
    },
    {
      "type": "image_picker",
      "id": "mens_open_image",
      "label": "Men's Fragrance - Open Image"
    },
    {
      "type": "image_picker",
      "id": "womens_closed_image",
      "label": "Women's Fragrance - Closed Image"
    },
    {
      "type": "image_picker",
      "id": "womens_open_image",
      "label": "Women's Fragrance - Open Image"
    },
    {
      "type": "url",
      "id": "mens_collection_url",
      "label": "Men's Collection URL"
    },
    {
      "type": "url",
      "id": "womens_collection_url",
      "label": "Women's Collection URL"
    },
    {
      "type": "text",
      "id": "mens_regular_price",
      "label": "Men's Regular Price",
      "default": "1,799"
    },
    {
      "type": "text",
      "id": "mens_sale_price",
      "label": "Men's Sale Price",
      "default": "1,345"
    },
    {
      "type": "text",
      "id": "womens_regular_price",
      "label": "Women's Regular Price",
      "default": "1,799"
    },
    {
      "type": "text",
      "id": "womens_sale_price",
      "label": "Women's Sale Price",
      "default": "1,345"
    }
  ],
  "presets": [
    {
      "name": "Discover box",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="fragrance-boxes">
  <!-- Men's Fragrance Box -->
  <div class="fragrance-box">
    <a href="{{ section.settings.mens_collection_url }}">
      <div class="image-container">
        <img
          src="{{ section.settings.mens_closed_image | img_url: '1000x' }}"
          alt="Men's Fragrance - Closed"
          class="closed-box-image"
        >
        <img
          src="{{ section.settings.mens_open_image | img_url: '1000x' }}"
          alt="Men's Fragrance - Open"
          class="open-box-image"
        >
      </div>
      <div class="fragrance-details">
        <h2>Exclusive Set for Men</h2>
        <p>4 X 30ml Eau de Parfums</p>
        <div class="price-container">
          <span class="sale-price">Rs.{{ section.settings.mens_sale_price }}</span>
          <span class="regular-price">Rs.{{ section.settings.mens_regular_price }}</span>
        </div>
      </div>
    </a>
  </div>

  <!-- Women's Fragrance Box -->
  <div class="fragrance-box">
    <a href="{{ section.settings.womens_collection_url }}">
      <div class="image-container">
        <img
          src="{{ section.settings.womens_closed_image | img_url: '1000x' }}"
          alt="Women's Fragrance - Closed"
          class="closed-box-image"
        >
        <img
          src="{{ section.settings.womens_open_image | img_url: '1000x' }}"
          alt="Women's Fragrance - Open"
          class="open-box-image"
        >
      </div>
      <div class="fragrance-details">
        <h2>Exclusive Set for Women</h2>
        <p>4 X 30ml Eau de Parfums</p>
        <div class="price-container">
          <span class="sale-price">Rs.{{ section.settings.womens_sale_price }}</span>
          <span class="regular-price">Rs.{{ section.settings.womens_regular_price }}</span>
        </div>
      </div>
    </a>
  </div>
</div>

<style>
    .fragrance-boxes {
      display: flex;
      flex-wrap: nowrap;
      justify-content: space-evenly;
      gap: 30px;
      padding: 0 2rem 6rem;
    }

    .fragrance-box {
      text-align: center;
      width: 100%;
      /* max-height: 600px; */
      max-width: 600px;
      /* background-color: #f5f5f5; */
      padding: 20px;
     border-radius: 8px;
    }

    .fragrance-box a {
      text-decoration: none;
      color: inherit;
    }

    .image-container {
      position: relative;
      width: 100%;
      height: 500px;
      overflow: hidden;
    }

    .image-container img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .open-box-image {
      opacity: 0;
    }

    .image-container:hover .closed-box-image {
      opacity: 0;
    }

    .image-container:hover .open-box-image {
      opacity: 1;
    }

    .fragrance-details {
      /* margin-top: 20px; */
      h2{
        font-size:2rem;
        padding-top:1rem;
        line-height:1;
      }
    }

    .price-container {
      display: flex;
      justify-content: center;
      gap: 10px;
      /* margin-top: 10px; */
    }

    .sale-price {
      font-size: 1.5rem;
      font-weight: 600;
      color: #000;
    }

    .regular-price {
      font-size: 1.2rem;
      color: #ff0000;
      text-decoration: line-through;
    }
    @media (max-width:992px) {
      .image-container {
      aspect-ratio: 1/1;
      height: auto;
    }
    .fragrance-details{
     h2{
      font-size: 1.4rem;
     }
     p{
      font-size: 1rem;
     }
     .price-container{
      .sale-price , .regular-price {
      font-size: 1rem;
     }
    }

    }}
    @media (max-width:610px) {
      .fragrance-boxes {
      gap: 3px;
      padding:0;
        padding-bottom:3rem;
      .fragrance-box{
        padding: 2px;
      }
    }
      .fragrance-details{
     h2{
      font-size: 1.2rem;
     }
     p{
      font-size: .8rem;
     }
     .price-container{
      .sale-price , .regular-price {
      font-size: .8rem;
     }
    }

    }
    }
    @media(max-width:422px){
      .fragrance-details{
     h2{
      font-size: 1rem;
     }
  }
    }
</style>
